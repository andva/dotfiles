[http]
	sslVerify = false

[user]
	name = andreas.valter
	email = andreas.valter@king.com

[core]
	exludesfile = ~/.gitexclude
	trustctime = false

[color]
	ui = auto
[color "branch"]
	current = blue reverse
	local = blue
	remote = yellow
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[alias]
	st = status
	lg = log --oneline --decorate --graph --all
	s = status -s

[push]
	default = simple

[merge "ours"]
	driver = true

[merge "theirs"]
	driver = mv %B %A

[merge "conflict"]
	driver = false
